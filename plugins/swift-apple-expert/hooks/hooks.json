{
  "_description": "Swift Apple Expert - Swift 6 validation hooks",
  "_version": "1.0.0",
  
  "hooks": {
    "PreToolUse": [
      {
        "_description": "Block Swift edits if skill not consulted",
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/check-swift-skill.py"
          }
        ]
      },
      {
        "_description": "Validate Swift SOLID principles before Write/Edit",
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/validate-swift-solid.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "_description": "Track skill file reads",
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/track-skill-read.py"
          }
        ]
      },
      {
        "_description": "Track MCP research calls",
        "matcher": "mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/track-mcp-research.py"
          }
        ]
      }
    ]
  }
}
