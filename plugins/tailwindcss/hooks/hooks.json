{
  "_description": "Tailwind CSS - v4.1 validation hooks",
  "_version": "1.0.0",
  
  "hooks": {
    "PreToolUse": [
      {
        "_description": "Block Tailwind edits if skill not consulted",
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/check-tailwind-skill.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "_description": "Validate Tailwind best practices after Write/Edit",
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/validate-tailwind.sh"
          }
        ]
      },
      {
        "_description": "Track skill file reads",
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/track-skill-read.sh"
          }
        ]
      },
      {
        "_description": "Track MCP research calls",
        "matcher": "mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/track-mcp-research.sh"
          }
        ]
      }
    ]
  }
}
